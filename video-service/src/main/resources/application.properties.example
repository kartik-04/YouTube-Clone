# Application Configuration
spring.application.name=video-service
server.port=8082

# Database Configuration
spring.datasource.url=jdbc:postgresql://localhost:5432/your_database_name
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate Configuration
# Note: Do NOT set spring.jpa.database-platform - Hibernate auto-detects it
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
# Disable open-in-view to avoid lazy loading issues (recommended)
spring.jpa.open-in-view=false

# Rate Limiting Configuration
# Maximum number of requests allowed within the time window
rate.limit.requests=10

# Time window in milliseconds (default: 60000 = 1 minute)
rate.limit.window.millis=60000

# Video Storage Configuration
# Directory path where uploaded video files will be stored
video.storage.location=./uploads/videos
